{
  "name": "@logistics-app/backend",
  "version": "1.0.0",
  "description": "Backend API for logistics tracking application",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon src/server.js",
    "start": "node src/server.js",
    "build": "echo 'Backend build completed'",
    "test": "jest",
    "lint": "eslint src/",
    "clean": "rm -rf node_modules dist",
    "db:create": "npx sequelize-cli db:create",
    "db:drop": "npx sequelize-cli db:drop",
    "db:migrate": "npx sequelize-cli db:migrate",
    "db:migrate:undo": "npx sequelize-cli db:migrate:undo",
    "db:seed:all": "npx sequelize-cli db:seed:all",
    "db:seed:undo:all": "npx sequelize-cli db:seed:undo:all",
    "migration:create": "npx sequelize-cli migration:generate --name",
    "model:create": "npx sequelize-cli model:generate --name",
    "seed:create": "npx sequelize-cli seed:generate --name"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.35.0"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.0",
    "sequelize-cli": "^6.6.3",
    "supertest": "^6.3.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}